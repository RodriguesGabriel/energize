{
    "$defs": {
        "probability": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "natural_number": {
            "type": "integer",
            "minimum": 1
        },
        "data_splits": {
            "type": "object",
            "properties": {
                "evo_train": {
                    "$ref": "#/$defs/probability"
                },
                "evo_test": {
                    "$ref": "#/$defs/probability"
                },
                "evo_validation": {
                    "$ref": "#/$defs/probability"
                }
            },
            "additionalProperties": false,
            "required": [
                "evo_train",
                "evo_test"
            ]
        },
        "augmentation": {
            "type": "object",
            "properties": {
                "train": {
                    "oneOf": [
                        {
                            "type": "object"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "test": {
                    "oneOf": [
                        {
                            "type": "object"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "test"
            ]
        },
        "metrics": {
            "type": "string",
            "oneOf": [
                {
                    "pattern": "(accuracy_|power_|energy_)\\d+"
                },
                {
                    "enum": [
                        "accuracy",
                        "loss",
                        "power",
                        "energy",
                        "zico"
                    ]
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "checkpoints_path": {
            "type": "string"
        },
        "statistics_format": {
            "enum": [
                "csv",
                "json"
            ]
        },
        "energize": {
            "type": "object",
            "properties": {
                "measure_power": {
                    "type": "object",
                    "properties": {
                        "train": {
                            "type": "boolean"
                        },
                        "test": {
                            "type": "boolean"
                        },
                        "num_measurements_test": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "modules": {
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "train",
                        "test",
                        "num_measurements_test",
                        "modules"
                    ]
                },
                "model_partition": {
                    "type": "boolean"
                },
                "model_partition_n": {
                    "type": "integer"
                },
                "ensure_gpu_exclusivity": {
                    "type": "boolean"
                },
                "seed_model": {
                    "type": "object",
                    "properties": {
                        "phenotype": {
                            "type": "string"
                        },
                        "weights_path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "phenotype"
                    ]
                }
            },
            "required": [
                "measure_power",
                "model_partition",
                "ensure_gpu_exclusivity"
            ],
            "if": {
                "properties": {
                    "model_partition": {
                        "const": true
                    }
                }
            },
            "then": {
                "required": [
                    "model_partition_n"
                ]
            }
        },
        "evolutionary": {
            "type": "object",
            "properties": {
                "generations": {
                    "$ref": "#/$defs/natural_number"
                },
                "lambda": {
                    "$ref": "#/$defs/natural_number"
                },
                "max_epochs": {
                    "type": "number",
                    "minimum": 0
                },
                "mutation": {
                    "type": "object",
                    "properties": {
                        "add_connection": {
                            "$ref": "#/$defs/probability"
                        },
                        "remove_connection": {
                            "$ref": "#/$defs/probability"
                        },
                        "add_layer": {
                            "$ref": "#/$defs/probability"
                        },
                        "reuse_layer": {
                            "$ref": "#/$defs/probability"
                        },
                        "remove_layer": {
                            "$ref": "#/$defs/probability"
                        },
                        "reuse_module": {
                            "$ref": "#/$defs/probability"
                        },
                        "remove_module": {
                            "$ref": "#/$defs/probability"
                        },
                        "dsge_layer": {
                            "$ref": "#/$defs/probability"
                        },
                        "macro_layer": {
                            "$ref": "#/$defs/probability"
                        },
                        "train_longer": {
                            "$ref": "#/$defs/probability"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "add_connection",
                        "remove_connection",
                        "add_layer",
                        "reuse_layer",
                        "remove_layer",
                        "reuse_module",
                        "remove_module",
                        "dsge_layer",
                        "macro_layer",
                        "train_longer"
                    ]
                },
                "track_mutations": {
                    "type": "boolean"
                },
                "fitness_metric": {
                    "$ref": "#/$defs/metrics"
                },
                "fitness_function": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "metric": {
                                "$ref": "#/$defs/metrics"
                            },
                            "objective": {
                                "enum": [
                                    "maximize",
                                    "minimize"
                                ]
                            },
                            "weight": {
                                "type": "number"
                            },
                            "conditions": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "metric": {
                                            "$ref": "#/$defs/metrics"
                                        },
                                        "type": {
                                            "enum": [
                                                "less_than",
                                                "greater_than"
                                            ]
                                        },
                                        "value": {
                                            "type": "number"
                                        }
                                    },
                                    "required": [
                                        "type",
                                        "value"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "metric",
                            "objective",
                            "weight"
                        ]
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "generations",
                "lambda",
                "max_epochs",
                "mutation",
                "track_mutations"
            ],
            "oneOf": [
                {
                    "required": [
                        "fitness_metric"
                    ]
                },
                {
                    "required": [
                        "fitness_function"
                    ]
                }
            ]
        },
        "network": {
            "type": "object",
            "properties": {
                "architecture": {
                    "type": "object",
                    "properties": {
                        "reuse_layer": {
                            "$ref": "#/$defs/probability"
                        },
                        "macro_structure": {
                            "type": "array"
                        },
                        "output": {
                            "type": "string"
                        },
                        "modules": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "network_structure_init": {
                                        "type": "array",
                                        "minItems": 1
                                    },
                                    "network_structure": {
                                        "type": "array",
                                        "minItems": 2,
                                        "maxItems": 2
                                    },
                                    "levels_back": {
                                        "type": "integer"
                                    }
                                },
                                "additionalProperties": false,
                                "required": [
                                    "network_structure_init",
                                    "network_structure",
                                    "levels_back"
                                ]
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "reuse_layer",
                        "macro_structure",
                        "output",
                        "modules"
                    ]
                },
                "learning": {
                    "type": "object",
                    "properties": {
                        "learning_type": {
                            "enum": [
                                "supervised"
                            ]
                        },
                        "default_train_time": {
                            "type": "integer"
                        },
                        "data_splits": {
                            "$ref": "#/$defs/data_splits"
                        },
                        "augmentation": {
                            "$ref": "#/$defs/augmentation"
                        }
                    },
                    "if": {
                        "properties": {
                            "learning_type": {
                                "const": "supervised"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "data_splits": {
                                "required": [
                                    "evo_validation"
                                ]
                            },
                            "augmentation": {
                                "required": [
                                    "train"
                                ]
                            }
                        }
                    },
                    "required": [
                        "learning_type",
                        "default_train_time",
                        "data_splits",
                        "augmentation"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "architecture",
                "learning"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "checkpoints_path",
        "statistics_format",
        "evolutionary",
        "network"
    ]
}